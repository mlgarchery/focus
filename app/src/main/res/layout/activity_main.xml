<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Settings"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For the application to work properly, you need to activate the following feature:" />

    <Button
        android:id="@+id/enableAccessibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Accessibility" />

    <Button
        android:id="@+id/enableOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Overlay" />
</LinearLayout>